---
const { name, description, image, targetPage, targetData } = Astro.props;
---
<div class="game-card bg-gray-800 rounded-xl shadow-xl border border-gray-700 p-8 flex flex-col items-center text-center" data-game-name={name}>
    <img src={image} alt={`${name} Game`} class="rounded-lg mb-4 w-full h-64 object-cover">
    <h3 class="text-3xl font-bold text-white mb-2">{name}</h3>
    <p class="text-gray-400 mb-6 max-w-md">{description}</p>
    {targetPage ? (
        <a href={targetPage} class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-full shadow-lg">Play {name}</a>
    ) : (
        <button class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-8 rounded-full shadow-lg" disabled>Coming Soon</button>
    )}
</div>
